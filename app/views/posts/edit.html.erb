<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

<h2>投稿編集</h2>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のerrorが発生しました
  <% @post.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>
<%= form_with model: @post, local:true do |f| %>
 <h4>タイトル</h4>
   <%= f.text_field :title %>
  <h4>説明</h4>
    <%= f.text_area :explanation %>
  <br>
  <%= f.submit '更新する' %>
 <% end %>
<%= link_to "確認する",post_path(@post) %>
|
<%= link_to "戻る",posts_path %>

 </div>
  </div>
</div>