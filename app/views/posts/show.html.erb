<div class= "container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "/users/users",user: @user, post: @newpost %>
    </div>

<div class = "col-md-8 offset-md-1">
  <h2>投稿詳細</h2>
  <table class="table">

</div>
    <tbody>
      <tr>
        <td>
        <%= link_to user_path(@post.user_id) do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60,fallback:"no_image.jpg" %>
　　　　<br>
　　　　<%= @post.user.name %>
        <% end %>
        </td>
        <td><%= link_to post_path(@post.id) do %>
        <%= @post.title %><% end %>
        </td>
        <td><%= @post.image %></td>
        <td><%= @post.explanation %></td>
          <td class=<%= "like_buttons_"+ @post.id.to_s %>>
　　　   <%= render "likes/like", post: @post %>
　　      </td>
        <td> <% if @post.user == current_user %>
        <%= link_to "Edit", edit_post_path(@post),class:"btn btn-success btn-sm btn-block mb-3" %>
        <% end %>
        </td>
        <td> <% if @post.user == current_user %>
            <%= link_to "Destroy", post_path, method: :delete, data:{ confirm: '本当に消しますか？' },class:"btn btn-danger btn-sm btn-block mb-3" %>
            <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class = "col-md-8 offset-md-1">
    <table class="table">
      <tbody>
         <td class= "comment">
　　　    <%= render "comments/comment", comments: @comments %>
        </td>
        </tbody>
        </table>
  </div>
      <div>
     <td><%= form_with(model: [@post,@comment], remote: true) do |f| %>
        <%= f.text_area :comment, placeholder: "コメントをここに", class: "col-8" %>
        <%= f.submit "送信する" %>
      <% end %>
　　　</td>
      </div>
　</div>