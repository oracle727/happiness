<div class= "container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "/users/users",user: @user, post: @newpost %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h2>投稿詳細</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@post.user_id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 50, fallback:"no_image.jpg", size: "300x250" %>
              <% end %>
            </td>
            <td>
              <% if @post.post_images.present? %>
                <% @post.post_images.each do |image| %>
                  <%= attachment_image_tag image, :image, :fill, 500, 500 %>
                <% end %>
              <% else %>
                <%= image_tag 'no_image.jpg', size: '200x200' %>
              <% end %>
            </td>
            <td>
              <%= @post.explanation %>
            </td>
            <td id ="like_<%= @post.id %>">
              <%= render "likes/like", post: @post %>
            </td>
            <td>
              <% if @post.user == current_user %>
                <%= link_to "Edit", edit_post_path(@post),class:"btn btn-success btn-sm btn-block mb-3" %>
              <% end %>
            </td>
            <td>
              <% if @post.user == current_user %>
                <%= link_to "Destroy", post_path, method: :delete, data:{ confirm: '本当に消しますか？' },class:"btn btn-danger btn-sm btn-block mb-3" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class = "col-md-8 offset-md-1">
        <table class="table">
          <tbody class="comments">
        <%= render "comments/comment", comments: @comments %>
          </tbody>
         </table>
      </div>
      <div>
        <%= form_with(model: [@post,@comment], remote: true) do |f| %>
          <%= f.text_area :text, placeholder: "コメントをここに", class: "col-8" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
  </div>
 </div>