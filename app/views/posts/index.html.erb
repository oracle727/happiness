<main>
<div class="container px-5 px-sm-0">
<div class= "row">
<div class="col-md-3">
  <%= render "users/users", user: current_user, post: @new_post %>
</div>
<div class= "col-md-8 offset-md-1">
<h2>みんなの投稿</h2>
<table class= "table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
    <th>画像</th>
    <th>内容</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <tr>
      <% @posts.each do |post| %>
      <td class="profile_image_posts">
        <%= link_to post_path(post.id) do %>
        <%=  attachment_image_tag User.find(post.user_id), :profile_image, fallback: "no_image.jpg", multiple: true %>
        <br>
        <%= post.user.name %>
      </td>
      <td class="image-box">
        <% post.post_images.each do |image| %>
          <%= attachment_image_tag image, :image,fallback: "no_image.jpg", multiple: true %>
        <% end %>
        <% end %>
      </td>
      <td><%= post.explanation %></td>
      <td id ="like_<%= post.id %>">
      <%= render "likes/like", post: post %>
      </td>
      <td><p><%= link_to "#{post.comments.count} コメント",  post_path(post.id) %></p></td>
     </tr>
      <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</main>

