<main>
<div class="container px-5 px-sm-0">
<div class= "row">
<div class="col-md-3">
  <%= render "users/users",user: @user, post: @post %>
</div>
<div class= "col-md-8 offset-md-1">
<h2>みんなの投稿</h2>
<table class= "table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
    <th>タイトル</th>
    <th>画像</th>
    <th>説明</th>
    <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
     <tr>
      <% @posts.each do |post| %>
      <td>
      <%= link_to user_path(post.user) do %>
      <%=  attachment_image_tag post.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: "300x250" %>
       <% end %>
      </td>
      <td><%= link_to post.title, post_path(post.id) %></td>
      <td><%= post.image %></td>
      <td><%= post.explanation %></td>
      <td class=<%= "likes_buttons_"+ post.id.to_s %>>
　　　<%= render "likes/like", post: post %>
　　  </td>
  </td>
      <td><p><%= link_to "#{post.comments.count} コメント",  post_path(post.id) %></p></td>
     </tr>
       <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</main>