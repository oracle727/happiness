<main>
  <div class="container">
    <div class="row">
      <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>ユーザー情報</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <% @user.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>
<%= form_with model: @user, local: true do |f| %>
  <label for="inputName">ニックネーム</label>
  <div class="form-group">
    <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前"%>
  </div>
  <div class="form-group">
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg", size: "300x250" %>
  <label for="inputImage">プロフィール写真</label>
    <%= f.attachment_field :profile_image %>
  </div>
  <div class="form-group">
    <%= f.text_field :introduction, autofocus: true, id: "inputName", placeholder: "自己紹介" %>
    </div>
    <%= f.submit "更新する" %>
<% end %>

<div class= "container">
  <div class="row">

    <div class= "text-end">
      <%= form_with model: @user, url: withdraw_confirm_path, local: true, method: :post  do |f| %>
        <%= f.hidden_field :id, :value => @user.id %>
        <%= f.submit "退会する", class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
</div>
</main>