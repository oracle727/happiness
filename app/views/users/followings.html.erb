<div class= "col-md-8 offset-md-1">
<h2>フォロー</h2>
<table class= "table table-hover table-inverse">

   <thead>
    <tr>
    <th>プロフィール写真</th>
    <th>ニックネーム</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @users.each do |user| %>
      <tr>
      <td> <%=  attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: "300x250" %>
      </td>
      <td><%= user.name %></td>
       <td><p>フォロー数<%= user.followings.count %></p></td>
       <td><p>フォロワー数<%= user.followers.count %></p></td>
      <td><%= link_to "Show", user_path(user) %></td>
    　</tr>
       <% end %>
  </tbody>
</table>
</div>
</div>
</div>