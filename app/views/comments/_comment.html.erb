<% comments.each do |comment| %>
  <tr>
    <td>
      <p> <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60,fallback:"no_image.jpg", size: "300x250" %></p>
      <%= comment.user.name %>
    </td>
    <td><%= comment.text %></td>
    <% if comment.user == current_user %>
    <td>
      <button type="button" class="btn btn-danger">
        <%= link_to "Destroy", post_comment_path(comment.post, comment), method: :delete, remote: true %>
      </button>
    </td>
    <% end %>
  </tr>
<% end %>