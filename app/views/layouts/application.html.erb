  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-warning">
        <div class="container">
      <li>
        <i class="fas fa-child"></i><strong><%= link_to "トップページ", root_path %></strong></i>
      </li>
      <div class="collapse navbar-collapse" id="navbarNavDropdown"></div>
      <ul class="navbar-nav ml-auto">

     <% if user_signed_in? %>

      <li class=Home>
        <i class="fas fa-home"><%= link_to "ホーム",user_path(current_user.id) %></i>
      </li>

     <li class=user>
      <i class="fas fa-users"><%= link_to 'ユーザー', users_path %></i>
     </li>

      <li class=Posts>
        <i class= "fab fa-angellist"></i><%= link_to '投稿', posts_path %></i>
      </li>

      <li class=about>
       <i class="fas fa-link"> <%= link_to "サイト説明", home_about_path %></i>
      </li>

     <li class=contact>
     <i class="fas fa-envelope"> <%= link_to "お問い合わせ",  new_contact_path %></i>
     </li>

      </li>

      <li class=logout>
        <i class="fas fa-sign-out-alt"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></i>
      </li>

    <% else %>

     <li class=Home>
       <i class="fas fa-home"><%= link_to "ホーム",root_path %></i>
     </li>

     <li class=about>
       <i class="fas fa-link"> <%= link_to "サイト説明", home_about_path %></i>
     </li>


      <li calss=signup>
        <i class="fas fa-user-plus"><%= link_to "新規登録", new_user_registration_path %></i>
      </li>

      <li class=login>
        <i class="fas fa-sign-in-alt"><%= link_to "ログイン", new_user_session_path %></i>
      </li>
    <% end %>
    </header>
    <%= yield %>
  </body>
  </html>


